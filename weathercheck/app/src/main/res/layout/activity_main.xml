<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-162dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="지역을 설정해주세요."
                android:singleLine="true"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="114dp"
                    android:layout_height="112dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/sunny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/T1H"
                        android:layout_width="254dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="기온"
                        android:paddingRight="0dp"
                        android:shadowColor="#353535"
                        android:shadowDx="10"
                        android:shadowDy="0"
                        android:shadowRadius="30"
                        android:textColor="#000000"
                        android:textColorHint="#2E2E2E"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/REH"
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="습도"
                        android:paddingRight="0dp"
                        android:shadowColor="#353535"
                        android:shadowDx="10"
                        android:shadowDy="0"
                        android:shadowRadius="30"
                        android:textColor="#000000"
                        android:textColorHint="#2E2E2E"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/sky"
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="날씨 상태"
                        android:shadowColor="#353535"
                        android:shadowDx="10"
                        android:shadowDy="0"
                        android:shadowRadius="30"
                        android:textColor="#000000"
                        android:textColorHint="#2E2E2E"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/RN1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="강수량"
                        android:shadowColor="#353535"
                        android:shadowDx="10"
                        android:shadowDy="0"
                        android:shadowRadius="30"
                        android:textColor="#000000"
                        android:textColorHint="#2E2E2E"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UUU"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:hint="동서바람"
                    android:shadowColor="#3C3C3C"
                    android:shadowDx="10"
                    android:shadowDy="0"
                    android:shadowRadius="70"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E" />

                <TextView
                    android:id="@+id/VEC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:hint="풍속"
                    android:shadowColor="#3C3C3C"
                    android:shadowDx="10"
                    android:shadowDy="0"
                    android:shadowRadius="70"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/VVV"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:hint="남북바람"
                    android:shadowColor="#3C3C3C"
                    android:shadowDx="10"
                    android:shadowDy="0"
                    android:shadowRadius="70"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E" />

                <TextView
                    android:id="@+id/WSD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:hint="풍향"
                    android:shadowColor="#3C3C3C"
                    android:shadowDx="10"
                    android:shadowDy="0"
                    android:shadowRadius="70"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="스테이션"
                android:shadowColor="#636363"
                android:shadowDx="10"
                android:shadowRadius="30"
                android:textColor="#000000"
                android:textColorHint="#2E2E2E"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CO"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:hint="이산화탄소"
                    android:shadowColor="#5A5A5A"
                    android:shadowDx="10"
                    android:shadowRadius="30"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/PM10"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:hint="미세먼지"
                    android:shadowColor="#5A5A5A"
                    android:shadowDx="10"
                    android:shadowRadius="30"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/PM25"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:hint="초미세먼지"
                    android:shadowColor="#5A5A5A"
                    android:shadowDx="10"
                    android:shadowRadius="30"
                    android:textColor="#000000"
                    android:textColorHint="#2E2E2E"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/URL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="미세먼지 건강수칙"
                android:textColor="#000000"
                android:textColorHint="#323232"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/URL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="고농도 미세먼지 대처방법"
                android:textColor="#000000"
                android:textColorHint="#323232"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/URL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="미세먼지 많은 날! 실내청소법!"
                android:textColor="#000000"
                android:textColorHint="#323232"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/URL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="미세먼지 배출에 좋은 음식들"
                android:textColor="#000000"
                android:textColorHint="#323232"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mnp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>